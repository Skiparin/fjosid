<div class="section-to-animate" id="booking">
    <h2 style="font-weight: 600;font-size: 40px;line-height: 1.2;color: #333333;margin-bottom: 1.5rem;">Booking</h2>

    <div style="margin-bottom: 6rem;">
        <div style="display: flex;justify-content: center;flex-direction: row;">
            <div style="display: flex;flex-direction: row; width:50%">
                <div>
                    <MudDatePicker PickerVariant="PickerVariant.Static" Date="@(DateTime.Today.AddDays(1))" />
                </div>
                <div>
                    <MudGrid>
                        <MudItem Style="max-width: 100%;flex-basis: 100%;" xs="12" sm="7">
                            <MudPaper Class="pa-6">
                                <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
                                    <MudTextField Style="margin-bottom:8px;"
                                        FullWidth="true"
                                        T="string"
                                        Label="Number of guests"
                                        Required="true" 
                                        RequiredError="Number of guests is required" 
                                        Validation="@(new Func<string, IEnumerable<string>>(NumberOfGuests))" />
                                    <MudTextField Style="margin-bottom:8px;"
                                        FullWidth="true"
                                        T="string"
                                        Label="Name"
                                        Required="true"
                                        RequiredError="Name is required" />
                                    <MudTextField Style="margin-bottom:8px;" 
                                        FullWidth="true"
                                        T="string"
                                        Label="Email"
                                        Required="true"
                                        RequiredError="Email is required!"
                                        Validation="@(new EmailAddressAttribute() {ErrorMessage = "The email address is invalid"})" />
                                    <MudTextField FullWidth="true" T="string" Label="Phonenumber" Required="true" RequiredError="Phonenumber is required"
                                        Validation="@(new PhoneAttribute() {ErrorMessage = "The phonenumber is invalid"})" />
                                </MudForm>
                            </MudPaper>
                        </MudItem>
                    </MudGrid>
                </div>
            </div>
        </div>
        <div style="display: flex;justify-content: center;flex-direction: row;margin-bottom:8px;">
            <div style="width: 50%;">
                <MudTextField T="string" Label="Details" Variant="Variant.Outlined" Lines="5" />
            </div>
        </div>
        <div style="display: flex;justify-content: center;flex-direction: row;">
            <div style="width: 50%;justify-content: end;display: flex;">
                <MudButton ButtonType="ButtonType.Button" Variant="Variant.Filled" Color="Color.Success">
                    Reserve Booking
                </MudButton>
            </div>
        </div>
    </div>
</div>

